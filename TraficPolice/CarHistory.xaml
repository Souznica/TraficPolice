<Page x:Class="TraficPolice.CarHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TraficPolice"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CarHistory">

    <Grid>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" Name="CarList">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Владелец" Width="*" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Дата 1" Width="*" Binding="{Binding Date1}"/>
                <DataGridTextColumn Header="Дата 2" Width="*" Binding="{Binding Date2}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
